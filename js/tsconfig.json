{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./",
    "outDir": "./dist",

    /* Language & Environment */
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["ESNext"],
    "types": ["node"],

    /* Output Options */
    "sourceMap": true,
    "declaration": false,

    /* Type Checking */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true
  },

  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
